
{
  "include": ["src/**/*", "client"],
  "compilerOptions": {                               
    "module": "CommonJS",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["es6", "dom", "esnext"],           
    "strict": true,
    "rootDir": "./src",   
    "outDir": "lib",                                                                        
    "forceConsistentCasingInFileNames": true,
    "target": "ES6"
  }
}

